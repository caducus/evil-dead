<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="body-wrapper">
      <header>
        <% include ./partials/header.ejs %>
      </header>
      <nav>
          <% if (currentUser) { %>
            <form action="/sessions?_method=DELETE" method="POST">
              <input type="submit" class="underline" value="Log Out" />
            </form>
          <% } else { %>
            <form action="/users/new">
              <input type="submit" class="underline" value="Sign Up" />
            </form>
            <form action="/sessions/new">
              <input type="submit" class="underline" value="Log In" />
            </form>
          <% } %>
      </nav>
      <main>
        <% if (currentUser.isAdmin === true) { %>
          <h2>Welcome, Administrator!</h2>
          <a href="/student">Continue to a list of all student entries.</a>
        <% } else if (currentUser) { %>
          <h2>Welcome, <%=currentUser.studentName; %>!</h2>
          <a href="/student">Continue to your list of entries.</a>
        <% } else { %>
          <h2>For access to your entries or to create a new entry, please log in.</h2>
        <% } %>
      </main>
    </div>
  </body>
</html>
