<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="body-wrapper">
      <header>
        <% include ../partials/header.ejs %>
      </header>
      <nav>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" class="underline" value="Log Out" />
        </form>
      </nav>
      <main>
        <h1>All Student Entries</h1>
        <table>
          <tr>
            <th><span class="header-text">Student Name</span></th>
            <th><span class="header-text">Student ID</span></th>
            <th><span class="header-text">Rotation</span></th>
          </tr>
        <% for (let i = 0; i < allStudents.length; i++) { %>
          <tr>
            <td><a href="/admin/:<%=allStudents[i].id; %>"><%=allStudents[i].studentName; %></a></td>
            <td><%=allStudents[i].studentID; %></td>
            <td><%=allStudents[i].rotation; %></td>
          </tr>
        <% } %>
        </table>
      </main>
    </div>
  </body>
</html>
