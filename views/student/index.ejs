<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="body-wrapper">
      <header>
        <% include ../partials/header.ejs %>
      </header>
      <nav>
        <form action="/student/new">
          <input type="submit" class="underline" value="New Skill Entry" />
        </form>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" class="underline" value="Log Out" />
        </form>
      </nav>
      <main>
        <ul>
          <% for (let i = 0; i < allSkills.length; i++) { %>
            <li>
              <a href="/student/<%=allSkills[i].id; %>">
              <%=allSkills[i].rotation; %></a><br />
              <%=allSkills[i].skill; %>
            </li>
          <% } %>
        </ul>
      </main>
    </div>
  </body>
</html>
