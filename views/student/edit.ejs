<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
    <script src="/js/app.js" charset="utf-8"></script>
  </head>
  <body>
    <div class="body-wrapper">
      <header>
        <% include ../partials/header.ejs %>
      </header>
      <nav>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" class="underline" value="Log Out" />
        </form>
      </nav>
      <main>
        <form action="/student/<%=thisEntry.id; %>?_method=PUT" method="POST">
          <!-- fieldset for student information -->
          <fieldset class="student-info">
            <legend>Student Information</legend>
            <!-- student name -->
            <label for="studentName">Name</label>
            <input type="text" name="studentName" id="studentName" value="<%=thisEntry.studentName; %>">
            <!-- student id -->
            <label for="studentID">ID Number</label>
            <input type="text" name="studentID" id="studentID" value="<%=thisEntry.studentID; %>">
          </fieldset>
          <div class="align-right">
            <input type="submit" value="Edit Entry">
          </div>
        </form>
      </main>
    </div>
  </body>
</html>
